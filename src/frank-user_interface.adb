         --  Draw page based on datalink state

         Draw_String ("Bluetooth:", (0, 20));
         if Datalink_Manager.State_Of_Manager = Off then
            Draw_String ("Off", (66, 20));
            Draw_To_Framebuffer (Cursor, (0, 40));
            Draw_String ("Turn On", (6, 40));

         elsif Datalink_Manager.State_Of_Manager = Open_Stream then
            Draw_String ("On", (66, 20));
            Draw_String ("Waiting For", (0, 30));
            Draw_String ("Connnection", (0, 40));
            Draw_To_Framebuffer (Cursor, (0, 50));
            Draw_String ("Turn Off", (6, 50));

         elsif Datalink_Established then
            Draw_String ("On", (66, 20));
            Draw_String ("Datalink Opened", (0, 30));
            Draw_To_Framebuffer (Cursor, (0, 50));
            Draw_String ("Turn Off", (6, 50));

         else
            Draw_String ("On", (66, 20));
            for Menu in Datalink_Options'Range loop
               if Menu = Selected_Datalink_Menu then
                  Draw_To_Framebuffer
                    (Cursor, (Menu_Origin.X + Cursor_Offset, Menu_Origin.Y));
               end if;
               Draw_String (Datalink_Names (Menu), Menu_Origin);
               Menu_Origin.Y := Menu_Origin.Y + 10;
            end loop;
         end if;

         Update_Screen;
      end Draw_Page;

   begin
      Draw_Page;

      --  Process button presses

      case Active_Button is
         when Left_Button | Right_Button =>
            --  Change the selection between the two datalink options

            Play_Left_Right_Button_Tone;

            case Selected_Datalink_Menu is
               when New_Connection =>
                  Selected_Datalink_Menu := Off;
               when Off =>
                  Selected_Datalink_Menu := New_Connection;
            end case;

         when Select_Button =>
            --  Select the selected option

            Play_Select_Tone;

            if Datalink_Manager.State_Of_Manager = Off then
               Datalink_Manager.Initalise;

            elsif Datalink_Manager.State_Of_Manager = Open_Stream then
               Datalink_Manager.Turn_Off_Bluetooth;

            elsif Datalink_Established then
               Datalink_Manager.Turn_Off_Bluetooth;

            else
               case Selected_Datalink_Menu is
               when New_Connection =>
                  Datalink_Manager.Accept_New_Connection;
               when Off =>
                  Datalink_Manager.Turn_Off_Bluetooth;
               end case;
            end if;

         when Back_Button =>
            Play_Back_Tone;
            Navigate_Back;

         when No_Button =>
            null;

      end case;
   end Datalink_Page;

