   ---------------
   -- Main_Page --
   ---------------

   procedure Main_Page is
      procedure Draw_Main_Menu (Selected_Menu : Main_Menu_Options);
      --  Draw the Main menu on the LCD screen

      --------------------
      -- Draw_Main_Menu --
      --------------------

      procedure Draw_Main_Menu (Selected_Menu : Main_Menu_Options) is
         Menu_Origin   : Pixel_Coordinates := (20, 20);
         --  Location of the first menu item on the LCD screen

         Cursor_Offset : Integer := -10;
         --  Offset of the cursor from the left of the text menu

      begin
         Clear_Framebuffer;
         Draw_Title_Banner;

         --  Draw each main menu option, placing the cursor to the left of the currently
         --  selected option.

         for Menu in Main_Menu_Names'Range loop
            if Menu = Selected_Menu then
               Draw_To_Framebuffer
                 (Cursor, (Menu_Origin.X + Cursor_Offset, Menu_Origin.Y));
            end if;

            Draw_String (Main_Menu_Names (Menu), Menu_Origin);
            Menu_Origin.Y := Menu_Origin.Y + 10;
         end loop;

         Update_Screen;
      end Draw_Main_Menu;

   begin
      Draw_Main_Menu (Selected_Main_Menu);

      --  Process any button presses

      case Active_Button is
         when Right_Button =>
            --  Move the cursor down, looping back to the top when we hit the bottom

            Play_Left_Right_Button_Tone;

            if Selected_Main_Menu /= Main_Menu_Options'Last then
               Selected_Main_Menu := Main_Menu_Options'Succ (Selected_Main_Menu);
            else
               Selected_Main_Menu := Main_Menu_Options'First;
            end if;

         when Left_Button =>
            --  Move the cursor up, looping back to the bottom when we hit the top

            Play_Left_Right_Button_Tone;

            if Selected_Main_Menu /= Main_Menu_Options'First then
               Selected_Main_Menu := Main_Menu_Options'Pred (Selected_Main_Menu);
            else
               Selected_Main_Menu := Main_Menu_Options'Last;
            end if;

         when No_Button =>
            null;

         when Select_Button =>

            Play_Select_Tone;

            --  Delay for 200 milliseconds to give the sound time to play before updating
            --  the screen.

            delay until Clock + Milliseconds (200);

            case Selected_Main_Menu is
               when Run =>
                  Frank.Control.Frank_State.Start_Frank_Walk;
                  Navigate_To (Page => Run);

               when Datalink =>
                  Navigate_To (Page => Datalink);

               when Off =>
                  --  Print off screen and display it for one second

                  Clear_Framebuffer;
                  Draw_String ("Goodnight", (40, 40));
                  Update_Screen;
                  delay until Clock + Seconds (1);

                  --  Power down Frank

                  Mindstorms.NXT.Power.Turn_Off_ARM;
            end case;

         when Back_Button =>
            null;
      end case;
   end Main_Page;

   -------------------
   -- Navigate_Back --
   -------------------

   procedure Navigate_Back is
   begin
      Current_Depth := Current_Depth - 1;
   end Navigate_Back;

   -----------------
   -- Navigate_To --
   -----------------

   procedure Navigate_To (Page : Frank_Pages) is
   begin
      Current_Depth := Current_Depth + 1;
      Navigation_List (Current_Depth) := Page;
   end Navigate_To;

   --------------------
   -- Play_Back_Tone --
   --------------------

   procedure Play_Back_Tone is
   begin
      Play_Tone (Frequency => 400,
                 Interval  => 100,
                 Volume    => 50);
   end Play_Back_Tone;

   ---------------------------------
   -- Play_Left_Right_Button_Tone --
   ---------------------------------

   procedure Play_Left_Right_Button_Tone is
   begin
      Play_Tone (Frequency => 800,
                 Interval  => 100,
                 Volume    => 50);
   end Play_Left_Right_Button_Tone;

   ----------------------
   -- Play_Select_Tone --
   ----------------------

   procedure Play_Select_Tone is
   begin
      Play_Tone (Frequency => 2000,
                 Interval  => 100,
                 Volume    => 50);
   end Play_Select_Tone;

   --------------
   -- Run_Loop --
   --------------

   procedure Run_Loop is
   begin
      --  Draw splash screen and display it for two seconds

      Set_Current_Pixel (X => 0, Y => 0);
      Draw_To_Framebuffer (Frank_Name);
      Update_Screen;

      delay until Clock + Seconds (2);

      --  Poll the button presses and refresh the screen every 200 milliseconds
      --  ??? Check why the 200 milliseconds, I think that it has to do with the frequency
      --  we receive data from the AVR micro which the buttons are attached to.
      loop
         Frank_Page_Records (Navigation_List (Current_Depth)).Page_Action.all;
         delay until Clock + Milliseconds (200);
      end loop;
   end Run_Loop;

end Frank.User_Interface;
